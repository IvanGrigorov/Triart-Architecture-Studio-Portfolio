doctype
html
    head
        title Triart Architecture
        link(rel="stylesheet", href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css")
        script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js")
        script(src="/js/bootstrap.min.js")
        link(rel="stylesheet" href="/css/styles.css")
        meta(name="viewport" content="width=device-width, user-scalable=no")
                
        script(src="/js/customJS.js" async)
        script(src="/js/firmJS.js" async)   
    body
        style.
            ul {
                margin: 0px !important;
                padding: 0px !important;
                list-style: none !important;
            }

            li {
                margin: 0px !important;
                padding: 0px !important;
            }
        div(id="sideNavigation" style="border: 2px solid #ff5a00; position: absolute; top: 25%; right: 5px; display: none; padding: 3px; font-size: 1.7em;") #{constantsSet.pages.companyPage.slideNavigation}
        ul(id="main" style="position: relative; height: 300vh;")
            li(id="1" style="height: 100vh; position: relative; margin-top: 1% !important;" title="startAnimationOnFirtsPage")
                div(id="loader" style="display: none;")
                    img(src="/Images/Additional/block-loading.gif")
                header
                    nav(class="navbar navbar-default")
                        div(class="container-fluid")
                            <!-- Brand and toggle get grouped for better mobile display -->
                            div(class="navbar-header")
                                button(type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false" id="Button")
                                    span(class="sr-only") Toggle navigation
                                    span(class="icon-bar")
                                    span(class="icon-bar")
                                    span(class="icon-bar")

                                a(class="navbar-brand" href="/index")
                                    img(src="/Images/Additional/customLogo.png" class="img-responsive")
                                a(href="/index/EN" class="btn btn-info") English
                                a(href="/index/BG" class="btn btn-info") Български
                                if (currentUser) 
                                    span #{currentUser.username}  
                            <!-- Collect the nav links, forms, and other content for toggling -->
                            div(class="collapse navbar-collapse" id="bs-example-navbar-collapse-1")
                                ul(class="nav navbar-nav navbar-right")
                                    li(class="dropdown")
                                        a(href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false") #{constantsSet.menu.projects} 
                                            span(class="caret")
                                                ul(class="dropdown-menu")
                                                    li
                                                        a(href="/categories/Обществени сгради") #{constantsSet.menu.dropdown.public}
                                                    hr 
                                                    li
                                                        a(href="/categories/Офиси") #{constantsSet.menu.dropdown.office}
                                                    hr
                                                    li
                                                        a(href="/categories/Хотели") #{constantsSet.menu.dropdown.hotels}
                                                    hr
                                                    li
                                                        a(href="/categories/Интериори") #{constantsSet.menu.dropdown.interiors}
                                                    hr
                                                    li
                                                        a(href="/categories/Жилищни сгради") #{constantsSet.menu.dropdown.residential}
                                                    hr
                                                    li
                                                        a(href="/categories/Индустриални сгради") #{constantsSet.menu.dropdown.industrial}
                                                    hr
                                                    li
                                                        a(href="/categories/Търговски сгради") #{constantsSet.menu.dropdown.commercial}
                                    li
                                        a(href="/company") #{constantsSet.menu.company}
                                    li
                                        a(href="/references") #{constantsSet.menu.references}
                                    li
                                        a(href="/contacts") #{constantsSet.menu.contacts}
                                    if (currentUser)
                                        li
                                            a(href="/uploadProject") #{constantsSet.menu.upload}
                                        li
                                            a(href="/logout") #{constantsSet.menu.logOut}
                                    if (!currentUser)
                                        li
                                            a(href="/login") #{constantsSet.menu.logIn}
                                    li
                                        a(href="/register") #{constantsSet.menu.registration}
                section
                    div(class="container" style="position: relative")
                        div(class="row")
                            div(class="col-sm-12")
                                div(style="margin: 1%; margin-left: -100vw; background-color: #FF5A00; display: inline-block; vertical-align: top; color: black; clear: left; padding: 3%;" id="firmName")
                                    h2(style="margin-top: 10px;") #{constantsSet.pages.companyPage.companyName}
                                hr(style="background-color: #FF5A00; margin-bottom: 5%; visibility: hidden;")
                                div(id="firmDescription" style="display: table; width: 100%; margin: auto; color: #FF5A00; margin-right: -100vw; text-align: center; font-size: 1.2em") #{constantsSet.pages.companyPage.firmDescription}
                            //div(class="arrow" style="position: absolute; bottom: 10px; text-align: center; width: 100%;")
                                img(style="height: 0px; display: inline-block;" src="/Images/Additional/arrow.png")
            li(id="2" style="height: 100vh; position: relative;" title="startAnimationOnSecondPage")
                section
                    div(class="container" style="position: relative; text-align: center;")
                        div(class="row")
                            div(class="col-sm-6" id="education" style="text-align: center; left: -100vw;")
                                div(style="margin: 3%;  background-color: #FF5A00; display: inline-block; vertical-align: top; color: black; clear: left; padding: 3%;" id="firmName")
                                    h4(style="margin-top: 10px;") #{constantsSet.pages.companyPage.education}
                                hr(style="background-color: #FF5A00; margin-bottom: 3%; visibility: hidden;")
                                img(src="/Images/Additional/edu.jpg")
                                div(id="education" style=" margin: auto; color: #FF5A00; text-align: center; font-size: 1.4em") #{constantsSet.pages.companyPage.educationText}
                            div(class="col-sm-6" id="exp" style="text-align: center; right: -100vw;")
                                div(style="margin: 3%; ; background-color: #FF5A00; display: inline-block; vertical-align: top; color: black; clear: left; padding: 3%;" id="firmName")
                                    h4(style="margin-top: 10px;") #{constantsSet.pages.companyPage.experience}
                                hr(style="background-color: #FF5A00; margin-bottom: 3%; visibility: hidden;")
                                img(src="/Images/Additional/exp.jpg")
                                div(id="exp" style="display: table; margin: auto; color: #FF5A00;  text-align: center; font-size: 1.4em") #{constantsSet.pages.companyPage.experienceText}
                // div(class="arrow" style="position: absolute; bottom: 10px; text-align: center; width: 100%;")
                        img(style="height: 0px; display: inline-block;" src="/Images/Additional/arrow.png")
            li(id="3" style="height: 100vh; position: relative;" title="startAnimationOnThirdPage")
                section(style="padding-bottom: 1%; height: auto;")
                    div(class="container" style="position: relative; text-align: center;  height: 100%;")
                        div(class="row" style="height: 100%;")
                            div(class="col-sm-6" id="skills" style="text-align: center; left: -100vw; height: 50%;")
                                div(style="text-align: center; left: -100vw;")
                                    div(style="margin: 1%;  background-color: #FF5A00; display: inline-block; vertical-align: top; color: black; clear: left; padding: 3%; text-align: center;")
                                        h4(style="margin-top: 10px;") #{constantsSet.pages.companyPage.skills} 
                                    hr(style="background-color: #FF5A00; margin-bottom: 3%; visibility: hidden;")
                                table(id="skills-tbl" style="display: inline-block; border-collapse: collapse;")
                                    tbody(style="display: table; width:100%; height: 100%;")
                                        tr
                                            td
                                                img(class="img-responsive" src="/Skills Images/archicad.png" alt="ArchiCAD")
                                            td
                                                img(class="img-responsive" src="/Skills Images/autocad.png" alt="AutoCAD")
                                            td
                                                img(class="img-responsive" src="/Skills Images/artlantis.png" alt="Artlantis")
                                        tr
                                            td
                                                img(class="img-responsive" src="/Skills Images/coreldraw.png" alt="CorelDRAW")
                                            td
                                                img(class="img-responsive" src="/Skills Images/photoshop.png" alt="Photoshop")
                                            td
                                                img(class="img-responsive" src="/Skills Images/word.png" alt="Word")
                                        tr
                                            td
                                                img(class="img-responsive" src="/Skills Images/excel.png" alt="Excel")
                                            td
                            div(class="col-sm-6" id="misc" style="text-align: center; right: -100vw;")
                                div(style="margin: 1%; ; background-color: #FF5A00; display: inline-block; vertical-align: top; color: black; clear: left; padding: 3%;" id="firmName")
                                    h4(style="margin-top: 10px;") #{constantsSet.pages.companyPage.notLast}
                                hr(style="background-color: #FF5A00; margin-bottom: 3%; visibility: hidden;")
                                div(id="membership" style="display: table; margin: auto; color: #FF5A00;  text-align: center; font-size: 1.4em") #{constantsSet.pages.companyPage.notLastText}
                footer
                    div(class="container")
                        div(class="row")
                            div(class="col-sm-9")
                                img(src="/Images/Additional/copyright.png" class="img-responsive") 
                            div(class="col-sm-3" id="contacts-col")
                                div(id="Contacts")
                                    div(id="linkedIn")
                                        a(href="https://www.linkedin.com/pub/yanco-yonchev/53/776/932")
                                            img(src="/Images/Additional/linkedIn.png" class="img-responsive")
                                    div(id="facebook")
                                        a(href="https://www.facebook.com/profile.php?id=100001221842016&fref=ts")
                                            img(src="/Images/Additional/facebook.png" class="img-responsive")
                                    div(id="mail")
                                        a(href="mailto:ml4@abv.bg")
                                            img(src="/Images/Additional/mail.png" class="img-responsive")